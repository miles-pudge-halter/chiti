<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:contentPadding="16dp"
                    app:cardElevation="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:id="@+id/profile_layout"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:id="@+id/profile_holder_card"
                                    app:cardCornerRadius="35dp"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp">
                                <ImageView
                                        android:id="@+id/profile_image"
                                        android:background="#ededed"
                                        app:srcCompat="@drawable/user_mark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                    android:id="@+id/profile_name"
                                    android:text="Thura Hlaing"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:fontFamily="@font/worksans_regular"
                                    android:textStyle="bold"
                                    android:textSize="17sp"
                                    style="@style/TextAppearance.AppCompat.Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <View
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:id="@+id/separator"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/profile_layout"
                                android:background="@color/colorLightBlack"
                                android:layout_width="0.3dp"
                                android:layout_height="100dp"/>
                        <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/separator"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:layout_marginTop="8dp"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorLightBlack"
                                    android:text="Balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:id="@+id/balance"
                                    android:layout_marginTop="8dp"
                                    android:textSize="24sp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:text="2046064 Kyats"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RelativeLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                    android:textStyle="bold"
                    android:text="Groups"
                    android:layout_margin="8dp"
                    android:textSize="22sp"
                    android:textColor="@color/colorLightBlack"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/groups_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            app:fabAlignmentMode="center"
            app:fabCradleMargin="8dp"
            app:elevation="10dp"
            app:navigationIcon="@drawable/ic_menu_black_24dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:backgroundTint="@color/colorAccent"
            app:tint="@color/colorWhite"
            android:id="@+id/new_group_fab"
            android:src="@drawable/ic_add_black_24dp"
            app:layout_anchor="@id/bottom_app_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>