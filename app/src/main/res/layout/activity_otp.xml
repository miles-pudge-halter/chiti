<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <GridLayout
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/numpad"
            android:columnCount="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_1"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="1"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_2"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="2"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_3"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="3"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_4"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="4"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_5"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="5"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_6"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="6"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_7"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="7"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_8"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="8"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_9"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="9"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:onClick="onClick"
                android:background="?attr/selectableItemBackground" />
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:id="@+id/num_0"
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25sp"
                android:text="0"
                android:onClick="onClick"
                android:hapticFeedbackEnabled="true"
                android:background="?attr/selectableItemBackground" />
        <ImageView
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_backspace_black_24dp"
                android:tint="#000000"
                android:layout_width="120dp"
                android:onClick="onDelete"
                android:id="@+id/num_delete"
                android:textColor="#000000"
                android:padding="20dp"
                android:background="?attr/selectableItemBackground" />
    </GridLayout>
    <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_above="@id/numpad"
            android:id="@+id/passcode_input"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/field_1"
                android:layout_margin="10dp"
                android:background="@color/colorAccentFilter"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        <TextView

                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/field_2"
                android:layout_margin="10dp"
                android:background="@color/colorAccentFilter"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        <TextView

                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/field_3"
                android:layout_margin="10dp"
                android:background="@color/colorAccentFilter"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/field_4"
                android:layout_margin="10dp"
                android:background="@color/colorAccentFilter"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        <TextView
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/field_5"
                android:layout_margin="10dp"
                android:background="@color/colorAccentFilter"
                android:layout_width="40dp"
                android:layout_height="40dp" />
    </LinearLayout>
    <TextView
            android:id="@+id/message"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_above="@id/passcode_input"
            android:text="Enter the OTP code we sent you through SMS."
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <ImageView
            android:layout_above="@id/message"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_message_black_24dp"
            android:tint="@color/colorAccent"
            android:layout_width="40dp"
            android:layout_height="40dp" />
</RelativeLayout>