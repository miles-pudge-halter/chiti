<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="wrap_content">
    <LinearLayout
            android:id="@+id/status_layout"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_gravity="center"
                android:id="@+id/status_indicator"
                android:tint="@color/colorStatusActive"
                app:srcCompat="@drawable/ic_dot_24dp"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        <TextView
                android:id="@+id/member_due_amount"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                tools:text="5000 Kyats"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_centerVertical="true"
            android:id="@+id/profile_holder_card"
            android:layout_margin="4dp"
            app:cardCornerRadius="25dp"
            android:layout_width="50dp"
            android:layout_height="50dp">
        <ImageView
                android:id="@+id/member_image"
                tools:src="@drawable/user_mark"
                android:background="#ededed"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/status_layout"
            android:layout_toEndOf="@id/profile_holder_card"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/member_name"
                tools:text="John Doe"
                android:textColor="@color/colorLightBlack"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/member_due_date"
                tools:text="Mar 05, 2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>